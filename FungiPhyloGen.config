

params {
  inputDir = ""
  readsDir = "$inputDir/reads" 
  resultsDir = "$inputDir/results"
  index = "$inputDir/samplesheet.csv" 
  refseq = "$inputDir/ref/GCF_002775015.1_Cand_auris_B11221_V1_genomic.fna"
  gbk = "$inputDir/ref/genomic.gbff"
  ploidy = 1
  threads = 12
  prjName = "PRJ01"
  genus = "cauris" 
  cleanreadsDir = "" 
}

workDir = "$params.inputDir/work"

params.cacheDir = "/scratch/package/anaconda/anaconda3_2023-02-27/envs" 
params.condaPath = "/scratch/package/anaconda/anaconda3_2023-02-27/envs"
params.PICARD = "$params.cacheDir/fpgAlign/share/picard-2.27.4-0"

process.executor = 'slurm'

executor {
    name = 'slurm'
    queueSize = 10
    submitRateLimit = '3 sec'
    
}


conda.enabled = true


