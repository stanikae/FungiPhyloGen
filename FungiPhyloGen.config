

params {
  inputDir = "/scratch/sysuser/stanford/projects/fungal-genomics/rutendo/Histo130"
  readsDir = "/scratch/sysuser/stanford/histo-analysis/reads" 
  resultsDir = "$inputDir/results"
  index = "$inputDir/histoSampleList.csv" 
  refseq = ""
  gbk = ""
  ploidy = 1
  threads = 12
  prjName = "PRJ01"
}

workDir = "$params.inputDir/work"

params.cacheDir = "/scratch/package/anaconda/anaconda3_2023-02-27/envs" //"$HOME/anaconda3/envs"
params.condaPath = "/scratch/package/anaconda/anaconda3_2023-02-27/envs"
params.PICARD = "$params.cacheDir/fpgAlign/share/picard-2.27.4-0"

process.executor = 'slurm'

executor {
    name = 'slurm'
    queueSize = 100
    submitRateLimit = '3 sec'
    
}


conda.enabled = true

